    <%= expenses_form.select :category_id, Category.all.collect {|category| [ category.name, category.id ] }, {:include_blank => "Select Category"} %>
  </div>
  <div class="field">
    <%= expenses_form.label :date %><br>
    <%= expenses_form.date_select :date %>
  </div>
  <% end %>
