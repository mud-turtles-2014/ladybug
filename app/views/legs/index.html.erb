<h1>Listing legs</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Trip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @legs.each do |leg| %>
      <tr>
        <td><%= leg.location.name %></td>
        <td><%= leg.start_date %></td>
        <td><%= leg.end_date %></td>
        <td><%= leg.trip.name %></td>
        <td><%= link_to 'Show', leg %></td>
        <td><%= link_to 'Edit', edit_leg_path(leg) %></td>
        <td><%= link_to 'Destroy', leg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

